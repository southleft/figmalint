{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./",
    "rootDir": "./",
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "typeRoots": []
  },
  "include": [
    "figma.d.ts",
    "code.ts",
    "ui.ts",
    "claude.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
