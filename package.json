{
  "name": "figmalint",
  "version": "2.0.1",
  "description": "FigmaLint - Component linting for Figma that audits design system compliance, MCP compatibility, accessibility, and generates developer handoff documentation.",
  "main": "dist/code.js",
  "scripts": {
    "build": "npm run bundle && npm run copy-assets",
    "bundle": "esbuild src/code.ts --bundle --outfile=dist/code.js --platform=neutral --target=es2017 --format=iife --global-name='' --loader:.ts=ts",
    "dev": "npm run bundle -- --watch",
    "copy-assets": "cp ui-enhanced.html dist/ && cp manifest.json dist/",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:mcp": "node scripts/test-mcp-connection.js",
    "test:mcp-integration": "node scripts/test-figma-plugin-mcp.js",
    "lint": "tsc --noEmit",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "figma",
    "plugin",
    "linter",
    "lint",
    "audit",
    "mcp",
    "design-system",
    "accessibility",
    "tokens",
    "developer-handoff"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@figma/plugin-typings": "^1.114.0",
    "esbuild": "^0.25.5",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist/**/*"
  ]
}
